<?xml version="1.0"?>
<component name="org.nuxeo.elasticsearch.contentviews.override">

  <require>org.nuxeo.ecm.webapp.contentview.contrib</require>
  <require>org.nuxeo.elasticsearch.ElasticSearchComponent</require>
  <require>org.nuxeo.ecm.webapp.pageproviders.contrib</require>

  <extension target="org.nuxeo.ecm.platform.ui.web.ContentViewService"
    point="contentViews">

   <!-- default content views for document content -->
   <contentView name="document_content">

      <genericPageProvider name="DocumentContent_ES"
        class="org.nuxeo.elasticsearch.provider.ElasticSearchNxqlPageProvider">

        <property name="coreSession">#{documentManager}</property>
        <property name="maxResults">DEFAULT_NAVIGATION_RESULTS</property>
        <whereClause docType="AdvancedSearch">
          <predicate parameter="ecm:fulltext" operator="FULLTEXT">
            <field schema="advanced_search" name="fulltext_all" />
          </predicate>
          <predicate parameter="dc:title" operator="FULLTEXT">
            <field schema="advanced_search" name="title" />
          </predicate>
          <predicate parameter="dc:modified" operator="BETWEEN">
            <field schema="advanced_search" name="modified_min" />
            <field schema="advanced_search" name="modified_max" />
          </predicate>
          <fixedPart>
            ecm:parentId = ? AND ecm:isCheckedInVersion = 0 AND
            ecm:mixinType !=
            'HiddenInNavigation' AND ecm:currentLifeCycleState
            != 'deleted'
          </fixedPart>
        </whereClause>
        <parameter>#{currentDocument.id}</parameter>
        <sort column="dc:title" ascending="true" />
        <pageSize>20</pageSize>
      </genericPageProvider>

    </contentView>

    <contentView name="document_trash_content">

      <genericPageProvider name="TrashContent_ES"
        class="org.nuxeo.elasticsearch.provider.ElasticSearchNxqlPageProvider">
        <property name="coreSession">#{documentManager}</property>
        <whereClause docType="AdvancedSearch">
          <predicate parameter="ecm:fulltext" operator="FULLTEXT">
            <field schema="advanced_search" name="fulltext_all" />
          </predicate>
          <predicate parameter="dc:title" operator="FULLTEXT">
            <field schema="advanced_search" name="title" />
          </predicate>
          <predicate parameter="dc:modified" operator="BETWEEN">
            <field schema="advanced_search" name="modified_min" />
            <field schema="advanced_search" name="modified_max" />
          </predicate>
          <fixedPart>
            ecm:parentId = ? AND ecm:isCheckedInVersion = 0 AND
            ecm:mixinType !=
            'HiddenInNavigation' AND ecm:currentLifeCycleState =
            'deleted'
          </fixedPart>
        </whereClause>
        <parameter>#{currentDocument.id}</parameter>
        <sort column="dc:title" ascending="true" />
        <pageSize>20</pageSize>
      </genericPageProvider>

    </contentView>

    <contentView name="section_content">

      <genericPageProvider name="SectionContent_ES"
        class="org.nuxeo.elasticsearch.provider.ElasticSearchNxqlPageProvider">

        <property name="coreSession">#{documentManager}</property>
        <property name="maxResults">DEFAULT_NAVIGATION_RESULTS</property>
        <whereClause docType="AdvancedSearch">
          <predicate parameter="ecm:fulltext" operator="FULLTEXT">
            <field schema="advanced_search" name="fulltext_all" />
          </predicate>
          <predicate parameter="dc:title" operator="FULLTEXT">
            <field schema="advanced_search" name="title" />
          </predicate>
          <predicate parameter="dc:modified" operator="BETWEEN">
            <field schema="advanced_search" name="modified_min" />
            <field schema="advanced_search" name="modified_max" />
          </predicate>
          <fixedPart>
            ecm:parentId = ? AND ecm:isCheckedInVersion = 0 AND
            ecm:mixinType !=
            'HiddenInNavigation' AND ecm:currentLifeCycleState
            != 'deleted'
          </fixedPart>
        </whereClause>
        <parameter>#{currentDocument.id}</parameter>
        <sort column="dc:title" ascending="true" />
        <pageSize>20</pageSize>
      </genericPageProvider>

    </contentView>

  </extension>

  <extension target="org.nuxeo.ecm.platform.query.api.PageProviderService"
    point="providers">

   <!--navigation tree -->
   <genericPageProvider name="tree_children"
     class="org.nuxeo.elasticsearch.provider.ElasticSearchNxqlPageProvider">
      <property name="maxResults">PAGE_SIZE</property>
      <pattern>
        ecm:parentId = ? AND ecm:isProxy = 0 AND
        ecm:mixinType = 'Folderish' AND ecm:mixinType != 'HiddenInNavigation'
        AND ecm:isCheckedInVersion = 0 AND ecm:currentLifeCycleState !=
        'deleted'
      </pattern>
      <sort column="dc:title" ascending="true" />
      <pageSize>50</pageSize>
    </genericPageProvider>

   <!-- document suggestion -->
   <genericPageProvider name="default_document_suggestion"
     class="org.nuxeo.elasticsearch.provider.ElasticSearchNxqlPageProvider">
      <property name="maxResults">PAGE_SIZE</property>
      <pattern quoteParameters="false" escapeParameters="true">
        ecm:fulltext LIKE '?*' AND ecm:mixinType !=
        'HiddenInNavigation' AND ecm:isCheckedInVersion = 0 AND
        ecm:currentLifeCycleState != 'deleted'
      </pattern>
      <!-- sort column="dc:title" ascending="true" / sort by fulltext relevance -->
      <pageSize>10</pageSize>
    </genericPageProvider>

  </extension>

</component>
